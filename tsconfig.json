{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react",
    "lib": ["esnext", "dom"],
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@components/*": ["./app/components/*"],
      "@pages/*": ["./app/pages/*"],
      "@layout/*": ["./app/layout/*"],
      "@config/*": ["./app/config/*"],
      "@server/*": ["./app/server/*"],
      "@utils/*": ["./app/utils/*"]
    },
    "typeRoots": ["./typings"],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true
  }
}
